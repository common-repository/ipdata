{% extends 'layouts/' ~ field.layout ~ '.twig' %}

{% block control %}

    <div class="adwpfw-radio">

        {% for option in field.options %}

            <label>

                <input type="radio"
                       id="{{ prefix }}-{{ field.form }}-field-{{ field.id }}-{{ loop.index }}"
                       name="{{ prefix }}[{{ field.form }}][{{ field.id }}]"
                       value="{{ option.value }}"
                        {% if field.value == option.value %} checked {% endif %}>
                {{ option.label }}

            </label>

            <br>

        {% endfor %}

    </div>

{% endblock %}
