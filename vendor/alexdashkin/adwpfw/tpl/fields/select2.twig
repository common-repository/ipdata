{% extends 'layouts/' ~ field.layout ~ '.twig' %}

{% block control %}

    <input type="hidden" name="{{ prefix }}[{{ field.form }}][{{ field.id }}]" value="">

    <select class="adwpfw-select2"
            id="{{ prefix }}-{{ field.form }}-field-{{ field.id }}"
            name="{{ prefix }}[{{ field.form }}][{{ field.id }}]{% if field.multiple %}[]{% endif %}"
            {% if field.required %} required {% endif %}
            {% if field.ajax_action %} data-ajax-action="{{ field.ajax_action }}" {% endif %}
            {% if field.multiple %} multiple {% endif %}
            data-min-chars="{{ field.min_chars }}">

        {% for option in field.options %}
            <option value="{{ option.value }}" {{ option.selected }}>{{ option.label }}</option>
        {% endfor %}

    </select>

{% endblock %}
