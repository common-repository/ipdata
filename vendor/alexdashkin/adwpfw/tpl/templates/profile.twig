<div class="adwpfw-profile adwpfw {{ prefix }}">

    {% for heading, fields in groups %}

        {% if heading %}
                <h3>{{ heading }}</h3>
        {% endif %}

        <table class="form-table">

            {% for field in fields %}

                {% include 'fields/' ~ field.tpl ~ '.twig' %}

            {% endfor %}

        </table>

    {% endfor %}

</div>