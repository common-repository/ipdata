<div class="adwpfw-tab">

    {% if tab.form %}

        <form class="adwpfw-form">

            <div class="adwpfw-fields">

                {% for field in tab.fields %}

                    {% include 'fields/' ~ field.tpl ~ '.twig' %}

                {% endfor %}

            </div>

            <div class="adwpfw-actions-bar">

                <button id="{{ prefix }}-button-save" type="submit" class="button button-primary">Save changes</button>

            </div>

        </form>

    {% else %}

        <div class="adwpfw-fields">

            {% for field in tab.fields %}

                {% include 'fields/' ~ field.tpl ~ '.twig' %}

            {% endfor %}

        </div>

    {% endif %}

</div>