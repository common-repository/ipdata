<div class="adwpfw-field">

    {% block label %}

        {% if field.label %}
            <div class="adwpfw-label">
                <label for="{{ prefix }}-{{ field.form }}-field-{{ field.id }}">{{ field.label }}</label>
            </div>

            <div class="adwpfw-help-tip adwpfw-tooltip dashicons dashicons-editor-help"
                    {% if field.desc %} style="visibility: visible" {% endif %}>
                {% if field.desc %}
                    <span class="tooltiptext">{{ field.desc }}</span>
                {% endif %}
            </div>
        {% endif %}

    {% endblock %}

    <div class="adwpfw-control">

        {% block control %}
        {% endblock %}

    </div>

</div>
